<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Chat</title>
  {{ style('style') }}
</head>
<body>

  @set('username', request.input('username'))
  @set('password',request.input('password'))

  <div class="chat-container">
      <h1> {{username}} {{password}} 5555</h1>
    <div class="chat-wrapper">
      @if(username)
        <div class="header">
          <h2>
            <span>Hello {{ username }}!</span>
            <span class="connected-users"></span>
            <span class="connection-status"></span>
          </h2>
        </div>
        <div class="messages">
        </div>
        <div class="input-wrapper">
          <input type="text" id="message" placeholder="Enter message" autofocus=1>
        </div>
      @else
        <div class="onboard">
          <form action="/login" method="POST">
            {{ csrfField() }}
            <input type="text" id="name" name="username" placeholder="Enter your name" autofocus=1>
            <input type="text" id="password" name="password" placeholder="Enter your password" autofocus=1>
            <button type="submit">LOGIN</button>
          </form>
        </div>
      @endif
    </div>
  </div>

  <script>
    window.username = '{{ username }}'
    window.password = '{{ password }}'
    window.token = '{{ token }}'
    console.log(window.token,"token")
  </script>

  {{ script('https://cdnjs.cloudflare.com/ajax/libs/babel-polyfill/6.26.0/polyfill.min.js') }}
  {{ script('https://unpkg.com/@adonisjs/websocket-client@1.0.9/dist/Ws.browser.js') }}
  {{ script('https://unpkg.com/jquery@3.3.1/dist/jquery.js') }}
  {{ script('chat.js') }}
</body>
</html>